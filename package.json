{
  "name": "Portfolio",
  "description": "Mario Lema Portfolio",
  "homepage": "https://github.com/MarioLema/mariolema.github.io",
  "author": "Mario Lema",
  "license": "ISC",
  "version": "0.1.0",
  "private": true,
  "dependencies": {},
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss css/style.comp.css --use autoprefixer -d css/",
    "compress:css": "node-sass css/prefix/style.comp.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "concat": "^1.0.3",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2"
  }
}
